<?xml version='1.0' encoding='utf-8'?>
<widget id="ru.conros" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Каталог Конрос</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <allow-navigation href="*" />
    <platform name="android">
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="android-minSdkVersion" value="21" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <splash density="land-hdpi" src="res/screen/android/drawable-hdpi/mainScreen_482.jpg" />
        <splash density="land-mdpi" src="res/screen/android/drawable-mdpi/mainScreen_322.jpg" />
        <splash density="land-xhdpi" src="res/screen/android/drawable-xhdpi/mainScreen_642.jpg" />
        <splash density="land-xxhdpi" src="res/screen/android/drawable-xxhdpi/mainScreen_962.jpg" />
        <splash density="land-xxxhdpi" src="res/screen/android/drawable-xxxhdpi/mainScreen_1282.jpg" />
        <splash density="port-hdpi" src="res/screen/android/drawable-hdpi/mainScreen_482.jpg" />
        <splash density="port-mdpi" src="res/screen/android/drawable-mdpi/mainScreen_322.jpg" />
        <splash density="port-xhdpi" src="res/screen/android/drawable-xhdpi/mainScreen_642.jpg" />
        <splash density="port-xxhdpi" src="res/screen/android/drawable-xxhdpi/mainScreen_962.jpg" />
        <splash density="port-xxxhdpi" src="res/screen/android/drawable-xxxhdpi/mainScreen_1282.jpg" />
        <icon density="ldpi" src="res/icon/android/mipmap-ldpi/conros_logo.png" />
        <icon density="mdpi" src="res/icon/android/mipmap-mdpi/conros_logo.png" />
        <icon density="hdpi" src="res/icon/android/mipmap-hdpi/conros_logo.png" />
        <icon density="xhdpi" src="res/icon/android/mipmap-xhdpi/conros_logo.png" />
        <icon density="xxhdpi" src="res/icon/android/mipmap-xxhdpi/conros_logo_h.png" />
        <icon density="xxxhdpi" src="res/icon/android/mipmap-xxxhdpi/conros_logo_h.png" />
    </platform>
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashScreenDelay" value="1000" />
    <preference name="Suppresses3DTouchGesture" value="true" />
    <preference name="Allow3DTouchLinkPreview" value="false" />
    <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="Fullscreen" value="true" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="^2.4.0" />
    <engine name="android" spec="^8.1.0" />
</widget>
